= form_for(@bear) do |f|
  - if @bear.errors.any?
    #error_explanation
      %h2
        = pluralize(@bear.errors.count, "error")
        prohibited this bear from being saved:
      %ul
        - @bear.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br
    = f.text_field :name
  .field
    = f.label :color
    %br
    = f.text_field :color
  .field
    = f.label :description
    %br
    = f.text_area :description
  .field
    = f.label :habitat
    %br
    = f.text_field :habitat
  .field
    = f.label :picture
    %br
    = f.text_field :picture
  .actions
    = f.submit
